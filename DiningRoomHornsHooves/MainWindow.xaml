<Window x:Class="DiningRoomHornsHooves.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiningRoomHornsHooves"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Обеды"></MenuItem>
            <MenuItem Header="Заказы" Click="OrdersClick"></MenuItem>
            <MenuItem Header="Приборы"></MenuItem>
            <MenuItem Header="Получение списка"></MenuItem>
            <MenuItem Header="Отчет"></MenuItem>
            <MenuItem Header="Прочее">
                <MenuItem Header="Создание повара" Click="CreateCookClick"></MenuItem>
                <MenuItem Header="Создание продукта" Click="CreateProductClick"></MenuItem>
                <MenuItem Header="Привязать поваров" Click="CreateProductCooksClick"></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
