<Window x:Class="DiningRoomHornsHooves.CutleriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiningRoomHornsHooves"
        mc:Ignorable="d"
        Title="Столовые приборы" Height="450" Width="800" Loaded="CutleriesWindowLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="1" Grid.Column="1" Click="CreateCutleryClick">Создать</Button>
        <Button Grid.Row="2" Grid.Column="1" Click="DeleteCutleryClick">Удалить</Button>
        <Button Grid.Row="3" Grid.Column="1" Click="UpdateCutleryClick">Изменить</Button>
        <DataGrid Name="CutleriesData" Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" ColumnWidth="*" IsReadOnly="True"></DataGrid>
    </Grid>
</Window>
